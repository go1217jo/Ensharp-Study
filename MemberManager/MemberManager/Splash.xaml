<Window x:Class="MemberManager.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemberManager"
        mc:Ignorable="d"
        Title="Splash" Height="326" Width="763" Icon="media/SplashImage_2.png" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen" >

   <Window.Triggers>
      <EventTrigger RoutedEvent="Loaded">
         <BeginStoryboard>
            <Storyboard>
               <DoubleAnimation
              Storyboard.TargetProperty="Opacity"
              From="0.0" To="1.0" Duration="0:0:1.0"/>
            </Storyboard>
         </BeginStoryboard>
      </EventTrigger>
   </Window.Triggers>
   <Window.Background>
      <ImageBrush ImageSource="media/SplashImage_2.png"/>
   </Window.Background>
   <Grid MouseLeftButtonDown="Move">
      <Grid.Background>
         <ImageBrush/>
      </Grid.Background>

   </Grid>
</Window>
