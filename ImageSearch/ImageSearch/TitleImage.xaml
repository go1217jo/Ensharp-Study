<UserControl x:Class="ImageSearch.TitleImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageSearch"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="500">
   <Grid x:Name="titleImage_grid" HorizontalAlignment="Center" VerticalAlignment="Top">
      <Image x:Name="title_img" Width="460" Height="180" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Fill" Source="images/ImageSearchTitle.jpg"/>
   </Grid>
</UserControl>
